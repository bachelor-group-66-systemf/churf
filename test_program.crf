data Bool () where {
    True : Bool ()
    False : Bool ()
};

main = case odd 24 of {
    True => 1 ;
    False => 0 ;
};

odd x = case x of {
    0 => False ;
    _ => not (even (x + minusOne)) ;
};

even x = case x of {
    0 => True ;
    _ => not (odd (x + minusOne)) ;
};

-- represents minus one :)
minusOne : Int ;
minusOne = 9223372036854775807 + 9223372036854775807 + 1;

not x = case x of {
    True => False ;
    False => True ;
};
